<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/card_title"
            android:text="Service Title"
            android:ellipsize="end"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/card_poster"
            android:layout_below="@id/card_title"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:text="Service Poster"
            android:textSize="14sp"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:id="@+id/card_address"
            android:layout_below="@id/card_poster"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:text="Service Address"
            android:textSize="14sp"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:id="@+id/card_distance_to"
            android:layout_below="@id/card_address"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:text="25 Minutes to Service"
            android:textSize="14sp"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/card_payment"
            android:layout_below="@id/card_distance_to"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:textStyle="bold"
            android:text="$25.20"
            android:textSize="14sp"
            android:ellipsize="end"

            />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_accept_btn"
                android:text="Accept Service"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/white"
                android:textColor="@android:color/holo_purple"/>



    </RelativeLayout>

    </android.support.v7.widget.CardView>

