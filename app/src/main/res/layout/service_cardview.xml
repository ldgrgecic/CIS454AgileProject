<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Service Title"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="Service Poster"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_poster"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="Service Address"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_distance_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_address"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="25 Minutes to Service"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_distance_to"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="$25.20"
            android:textSize="14sp"
            android:textStyle="bold"

            />


        <Button
            android:id="@+id/card_accept_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="Accept Service"
            android:textColor="@android:color/holo_blue_bright" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

